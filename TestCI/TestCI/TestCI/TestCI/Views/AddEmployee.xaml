<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bnb="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             x:Class="TestCI.Views.AddEmployee"
             bnb:BottomBarPageExtensions.TabColor="SpringGreen"
             Icon="recents.png">
    <ContentPage.Content>
        <StackLayout>

            <Entry x:Name="firstName"
                   Placeholder="Enter FirstName"
                   Text="{Binding FirstName,Mode=TwoWay}"
                    />
            
            <Entry x:Name="lastName"
                   Placeholder="Enter LastName"
                   Text="{Binding LastName,Mode=OneWayToSource}"/>
            <!--TextChanged="LastName_TextChanged"-->
            <Picker x:Name="designation"
                    SelectedIndex="{Binding SelectedDesignation, ,Mode=OneWayToSource}"
                    ItemsSource="{Binding DesignationList, ,Mode=OneWayToSource}"/>
            <!--SelectedIndexChanged="Designation_SelectedIndexChanged"-->
            <Button x:Name="Save" 
                    Text="Save"
                    Command="{Binding SaveCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>